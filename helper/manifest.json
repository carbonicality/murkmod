{
    "background": {
        "service_worker": "js/extension/background.js"
    },
    "default_locale": "en",
    "description": "A helper for murkmod tasks - the visual successor to mush",
    "icons": {
        "128": "images/stable/icon-128.png"
    },
    "manifest_version": 3,
    "minimum_chrome_version": "1",
    "name": "murkmod helper",
    "permissions": [
        "clipboardRead",
        "clipboardWrite",
        "idle",
        "terminalPrivate",
        "accessibilityFeatures.read",
        "management"
    ],
    "version": "0.2",
    "action": {
        "default_icon": "images/stable/icon-128.png"
    }
}
